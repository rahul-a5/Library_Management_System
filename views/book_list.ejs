<html>
    <body>
        <h4>Back to the home page</h4>
        <a href="/"> Home </a>
    <table style="background-color: lightblue" border="1" cellpadding="7" cellspacing="7">
      <tr>
        <th width="40px">No</th>
        <th>Book Name</th>
        <th>Author Name</th>
        <th>Published Year</th>
      </tr>
      <% if(data.length){ 
        for(var i = 0;i < data.length;i++) { %>
      <tr>
        <td><%=(i+1)%></td>
        <td><%=data[i].bname%></td>
        <td><%=data[i].aname%></td>
        <td><%=data[i].published_year%></td>
      </tr>
      <% }
      }else{ %>
      <tr>
        <td colspan="3">No Books</td>
      </tr>
    <% } %>
    </table>
    </body></html>